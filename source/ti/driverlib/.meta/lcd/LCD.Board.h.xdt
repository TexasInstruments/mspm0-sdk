% function printDefine() {
/* Defines for LCD */
%       let irqNameStr =  "#define "+"LCD"+"_IRQHandler"
%       let flavorIRQ =  "LCD"+"_IRQHandler";
`irqNameStr.padEnd(40," ")+flavorIRQ.padStart(40," ")`
%       let intirqNameStr =  "#define "+"LCD"+"_INT_IRQN"
%       let flavorINTIRQ = "LCD"+"_INT_IRQn";
`intirqNameStr.padEnd(40," ")+flavorINTIRQ.padStart(40," ")`
% } // function printDefine
%
% function printDeclare() {
void SYSCFG_DL_LCD_init(void);
% }// function printDeclare
