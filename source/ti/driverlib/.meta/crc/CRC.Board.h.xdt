/*
 *  ======== CRC.Board.h.xdt ========
 */

    let CRC = args[0]; /* passed by /ti/driverlib/templates/Board.c.xdt */
    let content = args[1];

    /* get ti/drivers common utility functions */
    let Common = system.getScript("/ti/driverlib/Common.js");

    let inst = CRC.$static;
    let defs = Common.genBoardHeader(inst, CRC);

    let updatedInstanceName = system.getScript("/ti/driverlib/crc/CRC_options.js").updatedInstanceName;
    let CRCInstance = updatedInstanceName?"CRC0":"CRC";

    switch(content) {
        case "Define":
            printDefine();
            break;
        case "Declare":
            printDeclare();
            break;
        default:
            /* do nothing */
            return;
    }
